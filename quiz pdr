  <script>
    let current = 0;
    let correct = 0;
    const questions = document.querySelectorAll('.question');

    function checkAnswer(choice) {
      const answer = questions[current].dataset.answer;
      if (choice === answer) {
        correct++;
      }
      questions[current].classList.remove('active');
      current++;
      if (current < questions.length) {
        questions[current].classList.add('active');
      } else {
        showResult();
      }
    }

    function showResult() {
      const result = document.getElementById('result');
      result.style.display = 'block';
      if (correct === questions.length) {
        result.innerHTML = '<h3>üéâ –í—ñ—Ç–∞—î–º–æ! –í–∏ –≤—ñ–¥–ø–æ–≤—ñ–ª–∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ –Ω–∞ –≤—Å—ñ –ø–∏—Ç–∞–Ω–Ω—è —Ç–∞ –≤–∏–≥—Ä–∞–ª–∏ –ø—Ä–∏–∑!</h3>';
      } else {
        result.innerHTML = '<h3>üò¢ –ù–∞ –∂–∞–ª—å, –≤–∏ –Ω–µ –≤—ñ–¥–ø–æ–≤—ñ–ª–∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ –Ω–∞ –≤—Å—ñ –ø–∏—Ç–∞–Ω–Ω—è. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑!</h3>';
      }
    }
  </script>
